<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border Color and Thickness -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Change color as needed -->

    <!-- Background Color -->
    <solid android:color="#FFFFFF" /> <!-- Optional background color -->

    <!-- Corner Radius -->
    <corners android:radius="8dp" /> <!-- Adjust as needed -->

    <!-- Padding (Optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>